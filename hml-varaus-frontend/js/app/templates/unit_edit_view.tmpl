<form id="edit-unit-form">
    <div class="form-group">
        <label for="unit-name">Nimi</label>
        <input name="name" type="text" class="form-control" id="unit-name" value="{{unit.getName()}}">
    </div>
    <div class="form-group">
        <label for="unit-address">Katuosoite</label>
        <input name="street_address" type="text" class="form-control" id="unit-address" value="{{unit.getStreetAddress()}}">
    </div>
    <div class="form-group">
        <label for="unit-zip">Postinumero</label>
        <input name="address_zip" type="number" class="form-control" id="unit-zip" value="{{unit.getZip()}}">
    </div>
    <div class="form-group">
        <label for="unit-email">Sähköpostiosoite</label>
        <input name="email" type="email" class="form-control" id="unit-email" value="{{unit.getEmail()}}">
    </div>
    <div class="form-group">
        <label for="unit-phone">Puhelinnumero</label>
        <input name="phone" type="number" class="form-control" id="unit-phone" value="{{unit.getPhone()}}">
    </div>
    <button id="unit-submit" class="btn btn-default submit-button">Tallenna</button>
    <button id="unit-delete" class="btn btn-danger submit-button">Poista</button>
</form>